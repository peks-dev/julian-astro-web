---
import Lightbox from "./lightbox/Lightbox.astro";

interface ImagesArrayItem {
  src: string;
  alt: string;
  // Otras propiedades relacionadas con la imagen
}
interface Props {
  images: ImagesArrayItem[];
}

const { images } = Astro.props;
---

<Lightbox />
<ul class="slider-container">
  {
    images.map((img) => (
      <li class="slider__item image-wrap">
        <img src={img.src} alt={img.alt} />
      </li>
    ))
  }
</ul>
<style>
  .slider-container {
    flex: 3 0 80%;
    display: flex;
    align-items: center;
    gap: 1rem;
    overflow-x: scroll;
    overflow-y: hidden;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    position: relative;
    z-index: 1;
    animation: move-rigth 0.5s ease-in forwards;
    animation-delay: 1s;
    opacity: 0;
  }
  .slider-container::-webkit-scrollbar {
    background-color: var(--accent-white);
  }
  .slider-container::-webkit-scrollbar-thumb {
    background-color: var(--accent-black);
    height: 0.5rem;
  }
  .slider__item {
    scroll-snap-align: start;
    min-width: 90%;
    cursor: pointer;
  }
  .slider__item img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  @keyframes move-rigth {
    0% {
      transform: translateX(50%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>
