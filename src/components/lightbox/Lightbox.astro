<picture class="lightbox" id="lightbox">
  <btn class="close-btn" id="closeBtn">X</btn>
  <img class="lightbox-content" id="lightboxContent" />
</picture>

<script src="./lightboxInteraction.js"></script>

<style>
  .lightbox {
    display: none;
    position: fixed;
    z-index: 4;
    background-color: rgba(0, 0, 0, 0.7);
    -webkit-backdrop-filter: blur(3px);
    backdrop-filter: blur(3px);
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    text-align: center;
  }

  .lightbox-content {
    max-width: 80%;
    max-height: 80%;
    margin: auto;
    display: block;
  }

  .close-btn {
    color: var(--accent-white);
    position: absolute;
    top: 5rem;
    right: 3rem;
    font-size: 4rem;
    cursor: pointer;
  }
  .close-btn:hover {
    transform: scale(1.1);
  }
  @media (max-width: 800px) {
    .close-btn {
      top: 25vh;
    }
  }
  @media (max-width: 600px) {
    .lightbox-content {
      max-width: 100%;
      max-height: 100%;
    }
  }
</style>
