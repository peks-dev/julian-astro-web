---
import Arrow from "../icons/Arrow.astro";
import Btn from "../Btn.astro";
---

<div class="slider-v2">
  <header class="slider-v2__header">
    <div class="slider-v2__txt-wrap">
      <h2 class="slider-v2__title">beatnik reebok</h2>
      <span class="slider-v2__subtitle">short film<span> </span></span>
    </div>
    <ul class="slider-v2__controls">
      <li class="slider-v2__control-item">
        <Btn text="prev" id="btn-slider-prev">
          <Arrow modifier="arrow--big " slot="left" />
        </Btn>
      </li>
      <li class="slider-v2__control-item">
        <Btn text="next" id="btn-slider-next">
          <Arrow modifier="arrow--left arrow--big " slot="right" />
        </Btn>
      </li>
    </ul>
  </header>
  <a
    href="/commercial/BeatnikReebok"
    class="slider-v2__img-container slider-v2__link"
  >
    <img
      src="/projects/commercial/beatnik-reebok/beatnik_reebok_1.webp"
      alt="Project cover"
      transition:animate="fade"
    />
  </a>
</div>

<script src="./sliderV2.js"></script>

<style>
  .slider-v2 {
    width: 100%;
    position: relative;
  }
  .slider-v2__header {
    width: 90%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    color: var(--accent-white);
  }
  .slider-v2__txt-wrap {
    display: flex;
    flex-direction: column;
  }
  .slider-v2__txt-wrap::before {
    content: "";
    width: 13rem;
    height: 0.2rem;
    background-color: currentColor;
    margin-bottom: 1rem;
  }
  .slider-v2__title {
    font-size: clamp(2.5rem, 4vw, 4rem);
    font-weight: bold;
    order: 2;
  }
  .slider-v2__subtitle {
    font-size: clamp(1.5rem, 2vw, 2rem);
    order: 1;
  }
  .slider-v2__title,
  .slider-v2__subtitle {
    text-transform: uppercase;
    line-height: normal;
  }

  .slider-v2__controls {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: min(30rem, 100%);
    height: 100%;
    align-self: center;
    gap: 4rem;
  }
  .slider-v2__control-item {
    /* width: clamp(6rem, 5vw, 8rem);
    height: clamp(3rem, 4vw, 4rem); */
    display: grid;
  }
  .slider-v2__control-item button {
    margin: auto 0;
    cursor: pointer;
    display: flex;
    gap: 1rem;
    font-size: 1.5rem;
    text-transform: uppercase;
    width: 70%;
    align-items: center;
  }
  .slider-v2__control-item button:active {
    transform: scale(1.1);
  }

  .slider-v2__img-container {
    width: 100%;
    height: 100%;
    border: 1rem solid var(--accent-black);
  }
  .slider-v2__img-container img {
    width: 100%;
    max-height: 55rem;
    object-fit: cover;
  }

  /* Responsive */
  @media screen and (max-width: 600px) {
    .slider-v2 {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    .slider-v2__header {
      position: relative;
      flex-direction: column;
      margin: 0;
      margin-top: 2rem;
      align-items: stretch;
      order: 2;
      gap: 5rem;
    }

    .slider-v2__txt-wrap {
      color: var(--accent-black);
    }
    .slider-v2__txt-wrap::before {
      background-color: var(--accent-black);
    }

    .slider-v2__img-container {
      order: 1;
    }
  }
</style>
