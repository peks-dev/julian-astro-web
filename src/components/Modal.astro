---
import Mail from "./icons/social/Mail.astro";
import Phone from "./icons/social/Phone.astro";
---

<div class="modal">
  <div class="modal__container">
    <label for="modal-trigger" class="modal__close-btn">X</label>
    <ul class="modal-links">
      <li class="modal__item">
        <Mail />
        <a href="mailto:julianlbass@gmail.com">julianlbass@gmail.com</a>
      </li>
      <li class="modal__item">
        <Phone />
        <a href="tel:+19178557232">+1 (917) 855-7232</a>
      </li>
    </ul>
  </div>
</div>

<style is:global>
  .modal {
    display: none;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    -webkit-backdrop-filter: blur(3px);
    backdrop-filter: blur(3px);
  }
  .modal__container {
    justify-self: center;
    align-self: center;
    display: flex;
    width: min(400px, 90%);
    height: 50%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .modal__close-btn {
    position: absolute;
    top: 12vh;
    right: 11%;
    text-align: right;
    width: min(400px, 90%);
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--accent-white);
    z-index: 3;
  }
  .modal__close-btn:hover {
    font-weight: bold;
  }
  .modal-links {
    width: min(400px, 90%);
    height: 25rem;
    background-color: var(--accent-black);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }
  .modal-links li {
    width: min(27rem, 80%);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .modal-links li:hover {
    transform: scale(1.1);
  }
  .modal-links a {
    color: var(--accent-white);
    font-size: 1.6rem;
    text-transform: uppercase;
  }

  @media screen and (max-width: 800px) {
    .modal-links {
      border: 0.2rem solid var(--accent-white);
    }
  }
</style>
